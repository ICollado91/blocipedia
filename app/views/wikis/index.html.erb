<p id="notice"><%= notice %></p>

<h1>Wikis</h1>

<table style="width:100%">
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>User</th>
      <th colspan="5"></th>
    </tr>
  </thead>

  <tbody>
    <% @wikis.each do |wiki| %>
      <tr>
        <td><%= link_to wiki.title, wiki %></td>
        <td><%= link_to wiki.body, wiki %></td>
        <td><%= wiki.user.email %></td>
        <td>
          <% if current_user.can_edit?(wiki) %>
            <%= link_to 'Edit', edit_wiki_path(wiki), :class => "btn btn-success btn-sm" %>
          <% end %>
        </td>
        <td>
          <% if current_user.can_destroy?(wiki) %>
            <%= link_to 'Destroy', wiki, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger btn-sm" %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Wiki', new_wiki_path, :class => "btn btn-primary" %>
