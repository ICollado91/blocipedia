<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @wiki.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= markdown(@wiki.body) %>
</p>

<p>
  <strong>Private:</strong>
  <%= @wiki.private %>
</p>

<p>
  <strong>Author:</strong>
  <%= @wiki.author %>
</p>

<p>
  <strong>Collaborators:</strong>
  <% if @wiki.collaborators.count != 0 %>
    <% @wiki.collaborators.each do |user| %>
      <p>Name: <% user.username %> Email <% user.username %></p>
    <% end %>
  <% else %>
    <p>There are currently no collaborators working on this wiki!</p>
  <% end %>
</p>

<% if policy(@wiki).update? %>
  <%= link_to 'Edit', edit_wiki_path(@wiki), :class => "btn btn-success btn-sm" %> |
<% end %>
<%= link_to 'Back', wikis_path, :class => "btn btn-default btn-sm" %>
